<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Tareas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
<div class="container">
  <h1>Lista de Tareas</h1>
  <a href="/create" class="btn btn-success mb-3">Crear Nueva Tarea</a>

  <table class="table table-dark table-hover table-striped">
    <thead>
      <tr>
        <th>Nombre de Tarea</th>
        <th>Encargado</th>
        <th>Fecha de Inicio</th>
        <th>Fecha de Finalizaci√≥n</th>
        <th>Estado</th>
        <th>Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.taskName %></td>
          <td><%= task.assignedTo %></td>
          <td><%= task.startDate %></td>
          <td><%= task.endDate %></td>
          <td><%= task.status %></td>
          <td>
            <a href="/edit/<%= task.task_id %>" class="btn btn-warning btn-sm">Editar</a>
            <form action="/delete/<%= task.task_id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
